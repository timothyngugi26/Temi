generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?
  role          String    @default("STUDENT")  // Changed from enum to String
  emailVerified DateTime?
  image         String?
  
  // Relations
  studentProfile Student?
  teacherProfile Teacher?
  schoolAdmin    SchoolAdmin?
  sessions       Session[]   // Added relation
  accounts       Account[]   // Added relation
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Student {
  id           String   @id @default(cuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  schoolId     String
  school       School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  grade        String
  points       Int      @default(0)
  
  // Relations
  projects     Project[]
  redeemedRewards RedeemedReward[]
  transactions PointTransaction[]
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Teacher {
  id           String   @id @default(cuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  schoolId     String
  school       School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  subject      String?
  
  // Relations
  projects     Project[]
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model SchoolAdmin {
  id           String   @id @default(cuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  schoolId     String   @unique
  school       School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model School {
  id              String   @id @default(cuid())
  name            String   @unique
  description     String?
  email           String?
  phone           String?
  address         String?
  logo            String?
  homeHubApproved Boolean  @default(false)
  homeHubRef      String?
  
  // Relations
  students     Student[]
  teachers     Teacher[]
  admin        SchoolAdmin?
  projects     Project[]
  rewards      Reward[]
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Project {
  id           String    @id @default(cuid())
  title        String
  description  String?
  subject      String
  dueDate      DateTime
  maxPoints    Int
  status       String    @default("PENDING")  // Changed from enum to String
  
  // Relations
  schoolId     String
  school       School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  teacherId    String
  teacher      Teacher  @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  studentId    String
  student      Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  transactions PointTransaction[]  // Added relation
  
  // Submission details
  submittedAt  DateTime?
  fileUrl      String?
  grade        Int?
  feedback     String?
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Reward {
  id           String   @id @default(cuid())
  name         String
  description  String?
  pointsCost   Int
  image        String?
  stock        Int      @default(-1) // -1 means unlimited
  
  // Relations
  schoolId     String?
  school       School?  @relation(fields: [schoolId], references: [id], onDelete: SetNull)
  redeemedBy   RedeemedReward[]
  transactions PointTransaction[]  // Added relation
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model RedeemedReward {
  id           String   @id @default(cuid())
  studentId    String
  student      Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  rewardId     String
  reward       Reward   @relation(fields: [rewardId], references: [id], onDelete: Cascade)
  redeemedAt   DateTime @default(now())
  status       String   @default("PENDING")  // Changed from enum to String
  
  // Delivery details
  deliveredAt  DateTime?
  notes        String?
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model PointTransaction {
  id           String   @id @default(cuid())
  studentId    String
  student      Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  amount       Int
  type         String   // Changed from enum to String
  description  String?
  
  // Reference to source
  projectId    String?
  project      Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  rewardId     String?
  reward       Reward?  @relation(fields: [rewardId], references: [id], onDelete: SetNull)
  
  createdAt    DateTime @default(now())
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expires      DateTime
  
  createdAt    DateTime @default(now())
}

model Account {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type         String
  provider     String
  providerAccountId String
  
  refresh_token          String?
  access_token           String?
  expires_at             Int?
  token_type             String?
  scope                  String?
  id_token               String?
  session_state          String?
  
  @@unique([provider, providerAccountId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
